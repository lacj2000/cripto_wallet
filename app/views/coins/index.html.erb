<p style="color: green"><%= notice %></p>
<div>
  <h1 class="display-6 fw-bold"><%= @coins.model_name.human(count:2) %></h1>

  <table id="coins" class="table table-hover table-striped">
    <thead>
      <tr>
        <th colspan="1"></th>
        <th><%= @coins.human_attribute_name("acronym") %></th>
        <th><%= @coins.human_attribute_name("description") %></th>
        <th><%= @coins.human_attribute_name("mining_type")%></th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <% @coins.each do |coin| %>
      <tr>
        <td>
          <%= image_tag(coin.url_image, size:"25x25")%>
        </td>
        <td>
          <b> <%= coin.acronym %> </b>
        </td>
        <td>
          <%= coin.description %>
        </td>
        <td>
          <%= coin.mining_type.acronym %>
        </td>
        <td>
          <%= link_to(I18n.t("generic_links.show"), coin) %>
        </td>
        <td>
          <%= link_to(I18n.t("generic_links.edit"),edit_coin_path(coin)) %>
        </td>
        <td>
          <%= link_to(I18n.t("generic_links.delete"), coin, data:{ turbo_method: :delete }) %>
        </td>
      </tr>
    <% end %>
  </table>
  <%= link_to I18n.t("coin.buttons.new_coin"), new_coin_path %>
</div>
