<p style="color: green"><%= notice %></p>
<div>
  <%# title mining types %>
  <h1 class="display-6 fw-bold"><%= @mining_types.model_name.human(count:2) %></h1>

  <table id="mining_types" class="table table-hover table-striped">
  <%# mining types table header  %>
    <thead>
      <tr>
        <th><%= @mining_types.human_attribute_name("acronym")%></th>
        <th><%= @mining_types.human_attribute_name("description")%></th>
        <th colspan="3"></th>
      </tr>
    </thead>

  <%# mining types table body  %>
    <% @mining_types.each do |mining_type| %>
      <tr>
        <td>
          <p>
            <b><%= mining_type.acronym %></b>
          </p>
        </td>
        <td>
          <p>
            <%= mining_type.description %>
          </p>
        </td>
        <td>
          <%= link_to(I18n.t("generic_links.show"), mining_type)%>
        </td>
        <td>
          <%= link_to(I18n.t("generic_links.edit"), edit_mining_type_path(mining_type))%>
        </td>
        <td>
          <%= link_to(I18n.t("generic_links.delete"), mining_type, data: {turbo_method: :delete} )%>
        </td>
      </tr>
    <% end %>
  </table>


  <%= link_to I18n.t("mining_type.buttons.new_mining_type"), new_mining_type_path %>

</div>
